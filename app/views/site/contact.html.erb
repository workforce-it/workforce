<% content_for :title do %>
  Get in touch
<% end %>

<% content_for :description do %>
 Contact Workforce.com the #1 platform for scheduling, clocking in & out, time off, and compliance with employment law. Perfect for businesses with hourly workers.
<% end %>

<div data-controller="demo-modal">
  <div class="bg-white">
    <div class="relative overflow-hidden">
      <div class="absolute inset-y-0 h-full w-full" aria-hidden="true">
        <div class="relative h-full">

          <svg class="absolute right-full transform translate-y-1/3 translate-x-1/4 md:translate-y-1/2 sm:translate-x-1/2 lg:translate-x-full" width="404" height="784" fill="none" viewBox="0 0 404 784">
            <defs>
              <pattern id="e229dbec-10e9-49ee-8ec3-0286ca089edf" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                <circle cx="1.5" cy="1.5" r="1.5" class="text-gray-200" fill="currentColor" />
              </pattern>
            </defs>
            <rect width="404" height="784" fill="url(#e229dbec-10e9-49ee-8ec3-0286ca089edf)" />
          </svg>
          <svg class="absolute left-full transform -translate-y-3/4 -translate-x-1/4 sm:-translate-x-1/2 md:-translate-y-1/2 lg:-translate-x-3/4" width="404" height="784" fill="none" viewBox="0 0 404 784">
            <defs>
              <pattern id="d2a68204-c383-44b1-b99f-42ccff4e5365" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                <circle cx="1.5" cy="1.5" r="1.5" class="text-gray-200" fill="currentColor" />
              </pattern>
            </defs>
            <rect width="404" height="784" fill="url(#d2a68204-c383-44b1-b99f-42ccff4e5365)" />
          </svg>
        </div>
      </div>
      <div class="relative pt-6 pb-10 sm:pb-6 2xl:pb-10">
        <%= render "layouts/nav" %>
        <div class="mt-16 sm:mb-20 mx-auto max-w-5xl px-4 sm:mt-24 sm:px-0 2xl:mb-8 text-center">
          <div class="text-center">
            <h1 class="text-6xl tracking-tight font-extrabold text-gray-900 sm:text-6xl md:text-9xl max-w-5xl mx-auto">
              <span class="block">Get in touch</span></span>
            </h1>
          </div>          
          <p class="mx-auto mt-3 text-center text-xl sm:text-2xl text-gray-700 sm:text-lg md:mt-5 md:text-2xl max-w-4xl">
            Got a question? Call us, email us, or schedule a time to chat below.
          </p>
          <div class="w-max bg-gray-50 rounded-lg py-5 px-6 mx-auto mt-10 mb-20">
            <div class="flex flex-col space-y-4 sm:space-y-0 sm:flex-row sm:space-x-10 text-gray-600">
              <div class="flex flex-col items-start">
                <% if uk? %>
                  <p class="text-base sm:text-lg">WeWork, 1 Mark Square</p>
                  <p class="text-base sm:text-lg">London EC2A 4EG</p>
                <% else %>
                  <p class="text-base sm:text-lg">150 N. Michigan Ave</p>
                  <p class="text-base sm:text-lg">Chicago, IL 60601</p>
                <% end %>
              </div>
              <div class="flex flex-col items-start">
                <% if uk? %>
                  <%= link_to "+44 333 577 2373 →", "tel:+44 333 577 2373", class: "text-base sm:text-lg hover:text-blue-tertiary" %>
                <% else %>
                  <%= link_to "888 766 5582 →", "tel:888 766 5582", class: "text-base sm:text-lg hover:text-blue-tertiary" %>
                <% end %>
                <%= link_to "support@workforce.com →", "mailto:support@workforce.com", class: "text-base sm:text-lg hover:text-blue-tertiary" %>
              </div>
            </div>
          </div>
          <div class="flex flex-col md:flex-row items-center justify-center md:space-x-4 space-y-4 md:space-y-0 mt-8 mb-6">
            <div class="btn-green px-8 py-2 mx-0 inline-flex space-x-2 items-center justify-center" data-action="click->demo-modal#open">
              <%= render "layouts/phone" %>
              <span>Book a call</span>
            </div>
            <%= link_to "Try Workforce.com today", try_path, class: "btn-blue-secondary mt-8 mb-6 px-8 py-2 mx-auto" %>
          </div>
        </div>
      </div>

      <div class="relative -mb-32 lg:-mb-40 2xl:-mb-60">
        <div class="relative inset-0 flex flex-col h-52 sm:h-72 2xl:h-96" aria-hidden="true">
          <div class="h-24 sm:flex-1 w-full bg-gray-wave">
          </div>
        </div>
      </div>

      <div class="relative bg-gray-50">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 pb-32">
          <div class="pt-20 relative text-center">
            <h2 class="text-center text-3xl text-gray-800 text-opacity-90 font-extrabold tracking-tight sm:text-5xl">
              <%= link_to "Learn about how it works", how_it_works_path, class: "underline" %>, <%= link_to "see the benefits based on role", role_by_role_path, class: "underline" %>, or if you're ready to get started —
            </h2>
            <div class="flex flex-col md:flex-row items-center justify-center md:space-x-4 space-y-4 md:space-y-0 mt-8 mb-6">
              <div class="btn-green px-8 py-2 mx-0 inline-flex space-x-2 items-center justify-center" data-action="click->demo-modal#open">
                <%= render "layouts/phone" %>
                <span>Book a call</span>
              </div>
              <%= link_to "Try Workforce.com today", try_path, class: "btn-blue-secondary mt-8 mb-6 px-8 py-2 mx-auto" %>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>
  <%= render "layouts/demo_modal" %>
</div>
