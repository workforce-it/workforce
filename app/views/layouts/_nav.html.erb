<div data-controller="mobile-menu">
  <div class="<% if request.path.include?('/software') || request.path.include?('/news') %>max-w-7xl<% else %>max-w-6xl<% end %> mx-auto px-4 sm:px-6">
    <nav class="relative flex items-center justify-between sm:h-10" aria-label="Global">
      <div class="flex items-center md:inset-y-0 md:left-0 w-full md:w-min">
        <div class="flex items-center justify-between w-full md:w-auto">
          <a href="<%= root_path %>">
            <span class="sr-only">Workforce.com</span>
            <%= render "layouts/logo", custom_class: "h-5" %>
          </a>
          <div class="flex items-center md:hidden">
            <button type="button" class="bg-gray-50 rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500" aria-expanded="false" data-action="click->mobile-menu#open">
              <span class="sr-only">Open main menu</span>
              <!-- Heroicon name: outline/menu -->
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      <div class="hidden md:flex md:space-x-8 mt-1">
        <%= link_to "How it works", how_it_works_path, class: "font-medium text-base text-gray-800 hover:text-gray-900" %>
        <%= link_to "Why we're different", why_were_different_path, class: "font-medium text-base text-gray-800 hover:text-gray-900" %>
        <%= link_to "Use cases", role_by_role_path, class: "font-medium text-base text-gray-800 hover:text-gray-900" %>
        <% if us? %><%= link_to "Customers", customers_path, class: "font-medium text-base text-gray-800 hover:text-gray-900" %><% end %>
        <%= link_to "Pricing", pricing_path, class: "font-medium text-base text-gray-800 hover:text-gray-900" %>
      </div>
      <div class="hidden md:flex md:items-center md:justify-end md:inset-y-0 md:right-0 space-x-2 mt-1">
        <span class="inline-flex" data-controller="gtag" >
         <span data-action="click->gtag#loginClick">
          <%= link_to "Log in", "https://my.workforce.com/login", class: "inline-flex items-center px-2 py-2 border border-transparent text-base font-medium rounded-md text-blue-dark hover:text-blue-500" %>
          </span>
        </span>
        <%= link_to "Create Free Account", try_path, class: "btn-blue-action" %>
      </div>
    </nav>
  </div>
  <div class="hidden fixed z-50 top-0 inset-x-0 p-2 transition transform origin-top-right md:hidden" data-mobile-menu-target="mobileMenu" data-transition-enter="transition duration-150 ease-out" data-transition-enter-start="transform opacity-0 scale-95" data-transition-enter-end="transform opacity-100 scale-100" data-transition-leave="transition duration-100 ease-in" data-transition-leave-start="transform opacity-100 scale-100" data-transition-leave-end="transform opacity-0 scale-95" >
    <div class="rounded-lg shadow-md bg-white ring-1 ring-black ring-opacity-5 overflow-hidden">
      <div class="px-5 pt-4 flex items-center justify-between">
        <div>
          <%= render "layouts/logo", custom_class: "h-8" %>
        </div>
        <div class="-mr-2">
          <button type="button" class="bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500" data-action="click->mobile-menu#close">
            <span class="sr-only">Close main menu</span>
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      <div class="px-2 pt-4 pb-3 space-y-1">
        <%= link_to "How it works", how_it_works_path, class: "block px-3 py-2 rounded-md text-base font-regular text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
        <%= link_to "Why we're different", why_were_different_path, class: "block px-3 py-2 rounded-md text-base font-regular text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
        <%= link_to "Role by role", role_by_role_path, class: "block px-3 py-2 rounded-md text-base font-regular text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
        <% if us? %><%= link_to "Customers", customers_path, class: "font-regular text-lg text-gray-800 hover:text-gray-900" %><% end %>
        <%= link_to "News", news_path, class: "block px-3 py-2 rounded-md text-base font-regular text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
        <%= link_to "Pricing", pricing_path, class: "block px-3 py-2 rounded-md text-base font-regular text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
      </div>
      <div class="flex justify-between w-full px-5 py-3 text-left font-medium text-blue-600 bg-gray-50 hover:bg-gray-100 hover:text-blue-700">
        <%= link_to "Try it FREE", try_path, class: "btn-green text-base mx-0 py-2 px-4" %>
        <%= link_to "Log in", "https://my.workforce.com/login", class: "inline-flex items-center px-2 border border-transparent text-base font-medium rounded-md text-gray-600 hover:text-blue-500" %>
      </div>
    </div>
  </div>
</div>