<% content_for :title do %>
  Ebooks & Whitepapers
<% end %>

<% content_for :description do %>
  Free whitepapers and ebooks from the latest workforce.com trends, surveys and research. Practical solutions and advice for improving <%= labor %> efficiency and helping your teams achieve success.
<% end %>

<div class="bg-white">
  <div class="relative overflow-hidden">
    <div class="relative pt-6 pb-16 sm:pb-24">
      <%= render "layouts/nav" %>
      <%= render "nav" %>
      <div class="max-w-7xl mx-auto py-8 px-4">
        <section class="flex w-full flex-wrap pb-6 mb-10">
          <div class="w-full my-5 mb-10">
            <h1 class="text-4xl text-gray-800 text-center font-extrabold tracking-tight sm:text-6xl">Ebooks & Whitepapers</h1>
            <p class="mt-3 max-w-sm mx-auto text-xl text-gray-700 sm:text-lg md:mt-5 md:text-xl text-center md:max-w-xl">Practical solutions and advice for improving <%= labor %> efficiency and helping your teams achieve success</p>
          </div>
          <% @whitepapers.each do |paper| %>
            <div class="sm:w-1/4 flex flex-col space-y-4 text-gray-600 px-6 my-8">
              <%= link_to paper[:file_path], class: "w-full h-auto" do %>
                <div class="<%= paper[:type] === :ebook ? 'book-container-0a01' : 'test' %> my-10">
                  <div class="<%= paper[:type] === :ebook ? 'book' : 'flex justify-center' %> h-72">
                    <%= image_tag("whitepapers/#{paper[:image_path]}", class: "h-full",  alt: "workforce whitepapers") %>
                  </div>
                </div>
                <h3 class="text-2xl font-bold tracking-tight leading-tight text-gray-800 text-center mt-2"><%= paper[:title] %></h3>
                <p class="mt-3 text-base text-gray-500 text-center"><%= excerpt(paper[:description], 101) %></p>
              <% end %>
            </div>
          <% end %>
        </section>
      </div>
    </div>
  </div>
</div>
